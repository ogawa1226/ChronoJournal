<div class="container">
  <h1 class="blur">
    Welcome to ChronoJournal 
  </h1>

<script>
  const CLASSNAME = "-visible";
  const TIMEOUT = 2000;
  const $target = $(".title");

  setInterval(() => {
    $target.addClass(CLASSNAME);
    setTimeout(() => {
      $target.removeClass(CLASSNAME);
    }, TIMEOUT);
  }, TIMEOUT * 20);
</script>