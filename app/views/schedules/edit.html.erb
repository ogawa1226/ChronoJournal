
<div class="container">
  <div class="d-flex d-inline mt-4">
      
    <h4><%= @schedule.start_time.strftime("%Y-%m-%d") %></h4>
    <div class="col-md-6 mx-auto">
      <h2>
        <i class="fa-solid fa-seedling", style="color: #60EAB1;"></i>
        スケジュール編集
        <i class="fa-solid fa-seedling fa-flip-horizontal", style="color: #60EAB1;"></i>
      </h2>
    </div>
      
  </div>
  <%= render "layouts/errors", obj: @schedule %>
  <%= render 'form', schedule: @schedule, btn_text: '更新', date: @schedule.day %>
</div>