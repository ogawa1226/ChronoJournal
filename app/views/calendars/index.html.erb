<div class="container mt-3 ">
  <div class="form-row">
    <div class="col-5 offset-7 d-flex d-inline">
      <div class="ml-5">
        <%= link_to marks_schedules_path do %>
          <i class="fa-solid fa-star fa-2x" area-hidden="true" style="color: yellow;"></i>
        <% end %>
      </div>
      <div class="ml-2">
        <%= render "searches/form" %>
      </div>
    </div>
  </div>

  <div class="d-flex">
    <div class="col-9">
      <%= month_calendar(events: @schedules, start_attribute: :start_time, end_attribute: :start_time) do |date, schedules| %>
        <%= link_to date.day, schedules_path(date: [date.year, date.month, date.day].join("-")) %>

        <% schedules.each do |schedule| %>
          <div>
            <%= schedule.title %>
          </div>
        <% end %>

      <% end %>
      <div class="col-md-3 d-flex align-items-center mb-5">
        <div class="flex-fill mb-5">
          <%= render "tags/list", tags: @tags %>
        </div>
      </div>
    </div>
  </div>
</div>